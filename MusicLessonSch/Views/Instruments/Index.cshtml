@model IEnumerable<MusicLessonSch.Models.Instrument>
@{
   ViewData["Title"] = "Instruments";
}

<h1>Instruments</h1>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.MinAge)</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.MinAge)</td>
                <td><a href="/Instruments/Edit/@item.Id">Edit</a></td>
                <td><a href="/Instruments/DeleteConfirm/@item.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add Instrument</a>


