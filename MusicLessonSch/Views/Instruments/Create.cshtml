@model MusicLessonSch.Models.Instrument;
@{
    ViewData["Title"] = "Create Instrument";
}

<h1>Create Instrument</h1>
<a asp-action="Index">Back to list</a>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MinAge"></label>
        <input asp-for="MinAge" class="form-control" />
        <span asp-validation-for="MinAge" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>

</form>
