@model MusicLessonSch.Models.Instrument
@{
    ViewData["Title"] = "Delete Instrument";
}

<h1>Confirm Deletion of Instrument</h1>
<a asp-action="Index">Back to list</a>

<p>
    <strong>@Html.DisplayNameFor(m => m.Name)</strong>: @Html.DisplayFor(m => m.Name)
</p>

<p>
    <strong>@Html.DisplayNameFor(m => m.MinAge)</strong>: @Html.DisplayFor(m => m.MinAge)
</p>

<p class="bg-danger text-white text-center p-2 rounded">
    <em>Press button below to confirm deletion of this instrument. This action cannot be undone.</em>
</p>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button class="btn btn-danger">Delete</button>
</form>
<a asp-action="Index" asp-controller="Instruments">Back to list</a>
