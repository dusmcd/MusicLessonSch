@model MusicLessonSch.Models.Instrument;
@{
    ViewData["Title"] = "Edit Instrument";
}

<h1>Edit Instrument</h1>
<a asp-action="Index">Back to list</a>
<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MinAge"></label>
        <input asp-for="MinAge" class="form-control" />
        <span asp-validation-for="MinAge" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Update</button>
</form>
